{
  "version": 1,
  "providers": {
    "policy": "cheapest",
    "entries": {
      "openai": {
        "builtin": "openai",
        "apiKeyEnv": "OPENAI_API_KEY",
        "models": [
          {
            "name": "gpt-4.1-mini",
            "aliases": ["fast", "balanced"],
            "inputPer1K": 0.005,
            "outputPer1K": 0.015
          }
        ]
      },
      "anthropic": {
        "builtin": "anthropic",
        "apiKeyEnv": "ANTHROPIC_API_KEY",
        "models": [
          {
            "name": "claude-3-5-haiku",
            "aliases": ["fast", "haiku"],
            "inputPer1K": 0.008,
            "outputPer1K": 0.024
          }
        ]
      }
    }
  },
  "tools": {
    "calculator": {
      "builtin": "calc",
      "planner": {
        "description": "Perform deterministic arithmetic calculations.",
        "inputSchema": {
          "type": "object",
          "properties": {
            "expression": { "type": "string" }
          },
          "required": ["expression"]
        }
      }
    }
  },
  "agents": {
    "default": {
      "description": "General purpose assistant with arithmetic skills.",
      "planner": {
        "kind": "json",
        "model": "fast",
        "systemPrompt": "You are a helpful assistant that plans the next best action.",
        "temperature": 0.2
      },
      "memory": {
        "builtin": "inmemory",
        "options": {
          "maxTurns": 50
        }
      },
      "tools": ["calculator"],
      "maxIterations": 8,
      "maxActionsPerPlan": 4,
      "context": {
        "maxTokens": 2000,
        "maxRecentTurns": 8
      }
    }
  },
  "defaults": {
    "agent": "default"
  }
}
